<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/action_bar_theme</item>
        <item name="android:actionMenuTextColor">@color/optionsTextColor</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/action_bar_theme</item>
        <item name="actionMenuTextColor">@color/optionsTextColor</item>
    </style>

    <style name="action_bar_theme" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/halftransparent</item>
        <item name="android:titleTextStyle">@style/action_bar_text</item>
    </style>

    <style name="action_bar_text">
        <item name="android:textColor">@color/optionsTextColor</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="benchmarkSettingWidget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/optionsTextColor</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="resultTableCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">right</item>
        <item name="android:minWidth">100dp</item>
    </style>
</resources>