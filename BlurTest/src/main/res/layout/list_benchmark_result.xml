<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="136dp"
              android:padding="8dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_100x100"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/tv_width_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/thumbnail"
        android:layout_alignRight="@+id/thumbnail"
        android:layout_alignBottom="@+id/thumbnail"
        android:text="100x100"
        android:textSize="11sp"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="@color/optionsTextColor"
        android:background="@color/halftransparent"/>

    <TextView
        android:id="@+id/tv_imageInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/thumbnail"
        android:layout_alignRight="@+id/thumbnail"
        android:layout_alignTop="@+id/thumbnail"
        android:text="123kb 0.6MP"
        android:textSize="11sp"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/optionsTextColor"
        android:background="@color/halftransparent"/>

    <TextView
        android:id="@+id/tv_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/thumbnail"
        android:layout_alignRight="@+id/thumbnail"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_alignBottom="@+id/thumbnail"
        android:text="16px"
        android:textSize="30sp"
        android:gravity="center"
        android:padding="3dp"
        android:shadowColor="#fff"
        android:shadowRadius="2"
        android:textColor="#222"/>



    <TextView
        android:id="@+id/tv_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:paddingLeft="8dp"
        android:text="10.3ms"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/optionsTextColor"
        />

    <TextView
        android:id="@+id/tv_deviation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="+/-3ms"
        android:layout_toLeftOf="@+id/tv_avg"
        android:layout_alignBottom="@+id/tv_avg"
        android:textColor="@color/optionsTextColor"
        />

</RelativeLayout>